##############################################################################
#
#  A large colloid is placed up against a wall and moved away.
#  This probes fluid replacement when there is no nearby
#  information ("weight = 0" in build replacement process).
#
#  symmetric_lb version
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 10

##############################################################################
#
#  System
#
##############################################################################

size 24_24_24
grid 2_2_2

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.00625

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric_lb

A -0.00625
B 0.00625
K 0.004
C 0.0

phi0 0.0
phi_initialisation  block
mobility 3.75
fd_gradient_calculation 3d_27pt_solid

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     input_one

colloid_one_a0   8.125
colloid_one_ah   8.125
colloid_one_r    12.0_12.0_16.0
colloid_one_v    0.0_0.0_-0.2

# Constant body force on all colloids ("gravity") [default is zero]

colloid_gravity  0.0_0.0_-0.01

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on yes
boundary_walls 0_0_1
periodicity 1_1_0

boundary_speed_bottom 0.0
boundary_speed_top    0.0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
