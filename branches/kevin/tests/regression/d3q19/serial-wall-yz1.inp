##############################################################################
#
#  Wall: square pipe conductance
#  A duct in y-z with drving force in x
#
##############################################################################

N_cycles 5000

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 2_16_16
periodicity 1_0_0

##############################################################################
#
#  Fluid parameters
#  
##############################################################################

viscosity 0.04
force 0.0001_0.0_0.0

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        none

###############################################################################
#
#  Walls / boundaries
#
###############################################################################

boundary_walls 0_1_1
boundary_speed_bottom 0.0
boundary_speed_top    0.0
boundary_shear_init 0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 5000
config_at_end no
