##############################################################################
#
#  Wall shear test
#
#  Boundary wall motion with equilibrium shear initialised
#
##############################################################################

N_cycles 10

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 16_16_16
periodicity 1_1_0
reduced_halo no

##############################################################################
#
#  Fluid parameters
#  
##############################################################################

viscosity 0.1

isothermal_fluctuations off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init     none

###############################################################################
#
#  Walls / boundaries
#
###############################################################################

boundary_walls 0_0_1
boundary_speed_bottom 0.01
boundary_speed_top    -0.01
boundary_shear_init 1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end no
