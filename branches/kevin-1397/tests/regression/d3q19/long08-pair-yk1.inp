##############################################################################
#
#  Colloid pairwise interaction parallel smoke test
#  Yukawa no noise: longer version of serial-pair-yk1.inp
#
##############################################################################

N_cycles 400

size 64_64_64
grid 2_2_2
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.02

isothermal_fluctuations off
temperature 0.0002133333

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none               

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_type        inactive
colloid_init        from_file

colloid_cell_min 16.0
colloid_gravity  0.0_0.0_0.0

lubrication_on 0
yukawa_on 1
yukawa_epsilon  1.330764285
yukawa_kappa 0.72463768115
yukawa_cutoff 16.0

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Input/Output frequency
#
###############################################################################

freq_statistics 400
config_at_end no

colloid_file_stub colloids-serial-pair-yk1
colloids_io_grid 1_1_1
colloid_io_format_input  ASCII_SERIAL

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
