##############################################################################
#
#  Spinodal LB smoke test
#  Longer version of serial-spin-lb1.inp
#
##############################################################################

##############################################################################
#
#  Run duration
#
###############################################################################

N_cycles 400

##############################################################################
#
#  System
#
##############################################################################

size 64_64_64
grid 2_2_2

##############################################################################
#
#  Fluid parameters
#
##############################################################################

viscosity 0.00625
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy symmetric_lb

A -0.00625
B 0.00625
K 0.004
C 0.0

phi0 0.0
phi_initialisation    spinodal
mobility 3.75
fd_gradient_calculation 3d_27pt_fluid

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        no_colloids

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 400
config_at_end no

###############################################################################
#
#  Miscellaneous
#
###############################################################################

random_seed 8361235
