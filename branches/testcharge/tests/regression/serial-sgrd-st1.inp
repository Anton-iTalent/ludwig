##############################################################################
#
#  Subgrid particle smoke test.
#
#  Key/value "calibration on" requests the calibration, although
#  it's not clear it is a sensible calculation for subgrid
#
##############################################################################

N_cycles 2000

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 16_16_16
reduced_halo no

##############################################################################
#
#  Fluid parameters
#
##############################################################################

isothermal_fluctuations off
ghost_modes off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_type        subgrid
colloid_init        random

colloid_random_no   1
colloid_random_dh   0.4

colloid_random_a0   0.20
colloid_random_ah   0.20
colloid_random_r0   6.1_6.1_6.1
colloid_random_v0   0.0_0.0_0.0
colloid_random_s0   1.0_0.0_0.0
colloid_random_m0   1.0_0.0_0.0

colloid_cell_min 4.0
colloid_gravity  0.0_0.0_0.0

###############################################################################
#
#  Periodic conditions / boundaries
#
###############################################################################

boundary_walls_on no
periodicity 1_1_1

###############################################################################
#
#  Output frequency and type
#
###############################################################################

calibration on

freq_statistics 2000
freq_measure    10000000
freq_config     10000000
colloid_io_freq 10000000
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235

