##############################################################################
#
#  Wall smoke test
#
#  This places a colloid close enough to a wall to generate links
#  but there is no lubrication correction.
#
##############################################################################

N_cycles 10

##############################################################################
#
#  System and MPI
# 
##############################################################################

size 24_24_24
periodicity 0_0_0
reduced_halo no

##############################################################################
#
#  Fluid parameters
#  
##############################################################################

viscosity 0.1

isothermal_fluctuations off

##############################################################################
#
#  Free energy parameters
#
###############################################################################

free_energy none

###############################################################################
#
#  Colloid parameters
#
###############################################################################

colloid_init        random
colloid_type        inactive

colloid_random_no   1
colloid_random_dh   0.0

colloid_random_a0   2.3
colloid_random_ah   2.3
colloid_random_r0   3.0_12.5_12.5
colloid_random_v0   0.0_0.0_0.0
colloid_random_s0   1.0_0.0_0.0
colloid_random_m0   1.0_0.0_0.0
colloid_random_c    0.0
colloid_random_h    0.0

# Constant body force on all colloids ("gravity") [default is zero]

colloid_cell_min 8.0
colloid_gravity  -0.001_0.0_0.0

###############################################################################
#
#  Walls / boundaries
#
###############################################################################

boundary_walls 1_1_1
boundary_speed_bottom 0.0
boundary_speed_top    0.0
boundary_shear_init 0

boundary_lubrication_rcnormal 0.0

###############################################################################
#
#  Output frequency and type
#
###############################################################################

freq_statistics 10
config_at_end no

###############################################################################
#
#  Miscellaneous
#
#  random_seed  +ve integer is the random number generator seed
#
###############################################################################

random_seed 8361235
